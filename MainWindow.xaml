<Window x:Class="AwesomeWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AwesomeWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock HorizontalAlignment="Center" FontSize="24" TextWrapping="Wrap" Text="Select a message option and then choose the Display button." VerticalAlignment="Top" Margin="0,90,0,0"/>
        <RadioButton x:Name="HelloButton" Content="Hello" HorizontalAlignment="Left" Margin="203,206,0,0" VerticalAlignment="Top" IsChecked="True"/>
        <RadioButton x:Name="GoodByeButton" Content="Goodbye" HorizontalAlignment="Center" Margin="0,206,0,0" VerticalAlignment="Top"/>
        <Button Content="Display" HorizontalAlignment="Left" Margin="342,324,0,0" VerticalAlignment="Top" Click="Button_Click"/>

    </Grid>
</Window>
